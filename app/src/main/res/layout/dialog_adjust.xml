<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baise">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/fense"/>
            <TextView
                android:layout_marginTop="-3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="歌曲收藏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/lanse"/>
            <TextView
                android:layout_marginTop="-3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="歌手收藏"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/zise"/>
            <TextView
                android:layout_marginTop="-3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="最近听过"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@color/qingse"/>
            <TextView
                android:layout_marginTop="-3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:text="很久没听"/>
        </LinearLayout>
    </LinearLayout>
    <com.badprinter.yobey.customviews.AdjustBar
        android:id="@+id/adjustFavoriteSongBar"
        app:adjustIndicatorId="@drawable/adjust_favorite_song_white"
        app:adjustHavePlayedColor="@color/fense"
        style="@style/settingsAdjustBarStyle"/>
    <com.badprinter.yobey.customviews.AdjustBar
        android:id="@+id/adjustFavoriteArtistBar"
        app:adjustIndicatorId="@drawable/adjust_artist_white"
        app:adjustHavePlayedColor="@color/lanse"
        style="@style/settingsAdjustBarStyle"/>
    <com.badprinter.yobey.customviews.AdjustBar
        android:id="@+id/adjustRecentBar"
        app:adjustIndicatorId="@drawable/adjust_recent_white"
        app:adjustHavePlayedColor="@color/zise"
        style="@style/settingsAdjustBarStyle"/>
    <com.badprinter.yobey.customviews.AdjustBar
        android:id="@+id/adjustAgoBar"
        app:adjustIndicatorId="@drawable/adjust_ago_white"
        app:adjustHavePlayedColor="@color/qingse"
        style="@style/settingsAdjustBarStyle"/>
    <Button
        android:id="@+id/adjustSureBt"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="@dimen/font_medium"
        android:textColor="@color/qingse"
        android:background="@color/baise"/>
</LinearLayout>