<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pinyin="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Home">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ListView
                android:id="@+id/songList"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/qianbai" />
            <com.badprinter.yobey.customviews.PinyinBar
                android:id="@+id/pinyinBar"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"

                pinyin:pinyinBackgroundColor="@color/qianbai"
                pinyin:pinyinselectedColor="@color/qingse"/>
        </LinearLayout>
        <TextView
            android:id="@+id/selectorText"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="20dp"
            android:alpha="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:textColor="@color/qingse"
            android:textSize="@dimen/font_xlarge"
            android:background="@drawable/round_bg"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/qingse">
        <ImageView
            android:id="@+id/playingPhoto"
            android:layout_width="@dimen/image_medium"
            android:layout_height="@dimen/image_medium"
            android:clickable="true"
            android:layout_alignParentLeft="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/playingPhoto"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/playingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_medium"
                android:textColor="@color/qianbai"/>
            <TextView
                android:id="@+id/playingArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small"
                android:textColor="@color/qianbai"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/musicControlLayout"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/preBt"
                android:layout_width="@dimen/music_control_medium"
                android:layout_height="@dimen/music_control_medium"
                android:src="@drawable/playpre_00000"
                android:background="@drawable/click_bg"
                android:clickable="true"
                android:layout_marginRight="10dp"/>
            <ImageView
                android:id="@+id/playBt"
                android:layout_width="@dimen/music_control_medium"
                android:layout_height="@dimen/music_control_medium"
                android:src="@drawable/playtopause_00000"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/nextBt"
                android:layout_width="@dimen/music_control_medium"
                android:layout_height="@dimen/music_control_medium"
                android:src="@drawable/playnext_00000"
                android:background="@drawable/click_bg"
                android:clickable="true"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
