<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.badprinter.yobey.activities.Player"
    android:background="#000">
    <ImageView
        android:id="@+id/blurBg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/blackBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent_black"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/smoke"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@drawable/smoke"/>

            <com.badprinter.yobey.customviews.MusicBar
                android:id="@+id/musicBar"
                xmlns:app="http://schemas.android.com/apk/res/com.badprinter.yobey"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                app:backgroundColor="@color/translucent_black"
                app:havePlayedColor="@color/qianbai"
                app:barHeight = "4dp"
                app:indicatorColor = "@color/qianbai"
                app:indicatorRadius = "0dp"
                app:max = "200"
                app:progress = "20"/>

            <LinearLayout
                android:id="@+id/controlLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/qianhui"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/songName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_large"
                    android:paddingTop="4dp"/>
                <TextView
                    android:id="@+id/songArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="@dimen/font_small"
                    android:paddingTop="2dp"/>

                <LinearLayout
                    android:id="@+id/musicControlLayout"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:id="@+id/preBt"
                        android:layout_width="@dimen/music_control_medium"
                        android:layout_height="@dimen/music_control_medium"
                        android:background="@drawable/playpre00"
                        android:clickable="true"
                        android:layout_marginRight="30dp"/>
                    <ImageView
                        android:id="@+id/playBt"
                        android:layout_width="@dimen/music_control_medium"
                        android:layout_height="@dimen/music_control_medium"
                        android:background="@drawable/playtopause00"
                        android:clickable="true"/>
                    <ImageView
                        android:id="@+id/nextBt"
                        android:layout_width="@dimen/music_control_medium"
                        android:layout_height="@dimen/music_control_medium"
                        android:background="@drawable/playnext00"
                        android:clickable="true"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
